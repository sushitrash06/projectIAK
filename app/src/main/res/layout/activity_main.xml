<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gambar"
    tools:context="com.example.android.weebs.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weebs Quiz!"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/wibu"
        android:textColor="#163a49"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wibu"
        android:text="please select the quiz you want!"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#00527b"
        android:textStyle="bold"
        android:background="#17fafd"
        android:id="@+id/judul" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/judul"
        android:onClick="riddle"
        android:layout_marginTop="66dp"
        android:background="#ffeda3"
        android:text="wanna try a riddle?"
        android:textSize="20dp"
        android:id="@+id/bt1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt1"
        android:text="weebs quiz"
        android:onClick="weeb"
        android:textSize="20dp"
        android:background="#ffbca3"

        />


</RelativeLayout>
